{
    "manifest_version": 3,
    "name": "Simkl>Plex(Dev)",
    "description": "Sync Simkl watch history to your plex account: development version",
    "version": "0.0.1",
    "background": {
        "service_worker": "/js/background/background.js"
    },
    "action": {
        "default_title": "Simkl>Plex"
    },
    "host_permissions": [
        "*://*/*"
    ],
    "optional_permissions": [
        "webNavigation"
    ],
    "permissions": [
        "declarativeNetRequest",
        "alarms",
        "storage"
    ]
}